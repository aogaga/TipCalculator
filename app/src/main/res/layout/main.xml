<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="10dp"
    android:stretchColumns="1,2,3"
    >



    <TableRow android:id="@+id/tableRow0" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="20dp" android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/billTotal"

            android:textColor="#000"

            android:textSize="16sp"
            android:paddingRight="5dp"
            android:gravity="left|right" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/Zero"
            android:layout_span="3"
            android:inputType="numberDecimal" />

    </TableRow>


    <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="5dp">

        <EditText android:id="@+id/editTextTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10%"
            android:layout_column="1"

            android:gravity="center"
            android:focusable="false"
            android:editable="false"
            android:longClickable="false"
            android:linksClickable="false"
            android:clickable="false" />

        <EditText android:id="@+id/editTextFifteen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15%"
            android:layout_column="2"
            android:gravity="center"
            android:focusable="false"
            android:editable="false"
            android:longClickable="false"
            android:linksClickable="false"
            android:clickable="false" />

        <EditText android:id="@+id/editTextTwenty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30%"
            android:layout_column="3"
            android:gravity="center"
            android:focusable="false"
            android:editable="false"
            android:longClickable="false"
            android:linksClickable="false"
            android:clickable="false" />
    </TableRow>


    <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="5dp"
        android:paddingRight="5dp"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip"
            android:textColor="#000"

            android:textSize="16sp"
            android:gravity="left" />



        <EditText android:id="@+id/editTextTenValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Zero"
            android:gravity="center"
            android:textSize="14sp"
            android:focusable="false"
            android:editable="false"
            android:longClickable="false"
            android:linksClickable="false"
            android:clickable="false" />

        <EditText android:id="@+id/editTextFifteenValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Zero"
            android:gravity="center"
            android:textSize="14sp"
            android:focusable="false"
            android:editable="false"
            android:longClickable="false"
            android:linksClickable="false"
            android:clickable="false" />

        <EditText android:id="@+id/editTextTwentyValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Zero"
            android:gravity="center"
            android:textSize="14sp"
            android:focusable="false"
            android:editable="false"
            android:longClickable="false"
            android:linksClickable="false"
            android:clickable="false" />
    </TableRow>


    <TableRow android:id="@+id/tableRow3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="5dp"
        android:paddingRight="5dp"
        android:gravity="left|right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total"
            android:textColor="#000"

            android:textSize="16sp" />



        <EditText android:id="@+id/editTextTenTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Zero"
            android:gravity="center"
            android:textSize="14sp"
            android:focusable="false"
            android:editable="false"
            android:longClickable="false"
            android:linksClickable="false"
            android:clickable="false" />

        <EditText android:id="@+id/editTextFifteenTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Zero"
            android:gravity="center"
            android:textSize="14sp"
            android:focusable="false"
            android:editable="false"
            android:longClickable="false"
            android:linksClickable="false"
            android:clickable="false" />

        <EditText android:id="@+id/editTextTwentyTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Zero"
            android:gravity="center"
            android:textSize="14sp"
            android:focusable="false"
            android:editable="false"
            android:longClickable="false"
            android:linksClickable="false"
            android:clickable="false" />
    </TableRow>




    <TableRow android:id="@+id/tableRow4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/custom"
            android:textColor="#000"

            android:textSize="16sp"
            android:paddingRight="5dp"
            android:gravity="left|right" />



        <SeekBar android:id="@+id/customSeekbar"
            android:layout_span="2"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>


        <EditText android:id="@+id/editTextCustomTipValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18%"
            android:gravity="center"
            android:textSize="14sp"
            android:focusable="false"
            android:editable="false"
            android:longClickable="false"
            android:linksClickable="false"
            android:clickable="false" />

        </TableRow>



    <TableRow android:id="@+id/tableRow5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip"
            android:textColor="#000"

            android:textSize="16sp"
            android:paddingRight="5dp"
            android:gravity="left|right" />







        <EditText android:id="@+id/editTextCustomTipTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Zero"
            android:gravity="center"
            android:textSize="14sp"
            android:focusable="false"
            android:editable="false"
            android:longClickable="false"
            android:linksClickable="false"
            android:clickable="false" />



        <TextView android:id="@+id/editTextBillTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total"
            android:paddingRight="5dp"
            android:gravity="right" />

        <EditText android:id="@+id/editTextCustomBillTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Zero"
            android:gravity="center"
            android:textSize="14sp"
            android:focusable="false"
            android:editable="false"
            android:longClickable="false"
            android:linksClickable="false"
            android:clickable="false" />
     </TableRow>


</TableLayout>